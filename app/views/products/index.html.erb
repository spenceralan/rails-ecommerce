<% if admin %>
  <span class="waves-effect waves-light btn">
    <%= link_to "Add Product", new_product_path %>
  </span>
<% end %>

<h3>Products</h3>

<div class="row">

  <div class="section">
    <% @products.each do |product| %>
      <div class="col s4">
        
        <div class="product-name">
          <h4>
            <span class="product-name-text">
              <%= link_to product.name, product_path(product), remote: true %>
            </span>
          </h4>
        </div>

        <div class="product-description" id="<%= product.id %>">
        </div>

        <p><%= number_to_currency product.price %></p>

        <%= form_for @order_item, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Quantity" %>
          <span class="waves-effect waves-light btn">
            <%= f.submit "Add to cart" %>
          </span>
        <% end %>

      </div>
    <% end %>
  </div>

</div>
